@model IEnumerable<XLibrary.Core.Models.Book>
@{
    ViewBag.Title = "Main Page";
}

<h1>Books</h1>

@foreach (var item in Model)
{

    <div class="col-md-4" style="height:450px;padding:10px;margin:10px;border: solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img" style="height:150px;width:150px" src="~/Content/BookImages/@item.Image" />
        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Title, "Details", new { id = item.Id })</strong>
        </div>
        <div class="col-md-12">
            <p>@item.Author</p>
        </div>
        <div class="col-md-12">
            <h4>@item.Description</h4>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Reserve</a>
        </div>
    </div>
}
<div class="col-md-12 clearfix" />